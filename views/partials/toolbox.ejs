  <!--Dropdowns for selectors-->
  <!-- Make one singular form to post-->
  <div id="saveForm">
  <form action="/saveScrapbook" method="POST">
    <input type="hidden" name="scrapbookName" id="scrapbookName" value="<%=scrapbookName%>"/>
    <input type="hidden" name="currentPageNumber" id="currentPageNumber" value="1"/>

    <div id="ColorForm" style="display:none">
      <label for="backgroundSelector">Select Color:</label>
      <br><button><input name="backgroundSelector" class="backgroundSelector" type="color" value="#ff4545" id="backgroundSelector"></button>
    </div>
    <div id="FontForm" style="display:none">
      <label for="fontColorSelector">Select Color:</label>
      <br><button><input name="fontColorSelector" class="fontColorSelector" type="color" value="#ff4545" id="fontColorSelector"></button>

    <label for="fontSelector">Font:</label>
      <select name="fontSelector" class="fontSelector" id="fontSelector">
      <option value="Outfit">Outfit</option>
      <option value="Courier New">Courier New</option>
      <option value="Times New Roman">Times New Roman</option>
      <option value="Chalkduster">Chalkduster</option>
      <option value="Apple Chancery">Apple Chancery</option>
      </select>
      <br>
    </div>
    <input type="submit" value="Save">
  </form>
  </div>
  <div id="ImageForm" style="display:none">
  <form action="/upload/photo" enctype="multipart/form-data" method="POST" class="button">
    <input type="file" name="picture" accept="image/*" />
    <input type="hidden" id="scrapbookName" name="scrapbookName" value= <%=scrapbookName%> />
    <br>
    <input type="submit" value="Upload Photo" required/>
  </form>
  </div>


  <script>
  function toggleImageTool() {
    var form = document.getElementById("ImageForm");
    if (form.style.display === "none") {
    form.style.display = "block";
      } else {
    form.style.display = "none";
    }
  }

  function toggleBackgroundTool() {
    var selector = document.getElementById("ColorForm");
    if (selector.style.display === "block") {
    selector.style.display = "none";
      } else {
    selector.style.display = "block";
    }
  }

  function toggleFontTool() {
    var selector = document.getElementById("FontForm");
    if (selector.style.display === "block") {
    selector.style.display = "none";
      } else {
    selector.style.display = "block";
    }
  }

  var leftpage = document.querySelector('.leftpage');
  var rightpage = document.querySelector('.rightpage');

  var backgroundColorSelector = document.querySelector('.backgroundSelector');
  var myBackgroundColor = document.getElementById("backgroundSelector");
  backgroundColorSelector.addEventListener('change', function(){
    leftpage.style.setProperty('--background-Color', backgroundColorSelector.value)
    rightpage.style.setProperty('--background-Color', backgroundColorSelector.value)

    myBackgroundColor.value = backgroundColorSelector.value;
    console.log(myBackgroundColor.value);
  });

  var fontColorSelector = document.querySelector('.fontColorSelector');
  var myFontColor = document.getElementById("fontColorSelector");
  fontColorSelector.addEventListener('change', function(){
    leftpage.style.setProperty('--font-Color', fontColorSelector.value)
    rightpage.style.setProperty('--font-Color', fontColorSelector.value)

    myFontColor.value = fontColorSelector.value;
    console.log(myFontColor.value);
  });

  var fontSelector = document.querySelector('.fontSelector');
  var myFont = document.getElementById("fontSelector");
  fontSelector.addEventListener('change', function(){
    leftpage.style.setProperty('--font-Selected', fontSelector.value)
    rightpage.style.setProperty('--font-Selected', fontSelector.value)

    myFont.value = fontSelector.value;
    console.log(myFont.value);
  });

  </script>
